<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.hackny.spring"
      android:versionCode="1"
      android:versionName="1.0">
      <uses-permission android:name="android.permission.CAMERA" />
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
      <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
 <uses-feature android:name="android.hardware.camera" />
 <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-sdk android:minSdkVersion="7" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".EventSnapActivity"
         android:theme="@android:style/Theme.Black.NoTitleBar"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".SnapPictureActivity" android:label="@string/app_name"
			android:theme="@android:style/Theme.Black.NoTitleBar" android:screenOrientation="landscape"></activity>
        
        <activity android:name=".demoActivity" android:label="@string/app_name"
			android:theme="@android:style/Theme.Black.NoTitleBar" android:screenOrientation="landscape"></activity>

    </application>
</manifest>
